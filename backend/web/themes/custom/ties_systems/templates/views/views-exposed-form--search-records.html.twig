{#
/**
 * @file
 * Theme override for a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="clearfix">
  <div class="row">
    <div class="col-md-6">
      {{ form.record }}
    </div>
    <div class="col-md-6">
      {{ form.book_id }}
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      {{ form.student }}
    </div>
    <div class="col-md-6">
      {{ form.isbn }}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{ form.title }}
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 form--inline">
      {{ form.check_out_date_wrapper }}
    </div>
    <div class="col-md-6 form--inline">
      {{ form.check_in_date_wrapper }}
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      {{ form.type }}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{ form.actions }}
    </div>
  </div>
</div>
